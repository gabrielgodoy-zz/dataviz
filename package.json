{
  "name": "dataviz",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel webDevServer test:watch",
    "test": "mocha --watch-extensions js --reporter progress ./tools/testSetup.js 'src/**/*.test.js'",
    "test:watch": "npm run test -- --watch",
    "copy": "npm run webpack && cp ./{CNAME,favicon.png} ./dist",
    "build": "npm-run-all --parallel clean-dist webpack copy",
    "deploy": "npm run build && surge ./dist",
    "webpack": "webpack --config 'webpack.config.prod.babel.js'",
    "webDevServer": "webpack-dev-server --progress --hot --inline --colors --port 3000 --config 'webpack.config.dev.babel.js'",
    "clean-dist": "npm run remove-dist && mkdir ./dist",
    "remove-dist": "rimraf ./dist",
    "lint": "eslint './src/**/*.js'",
    "precommit": "npm run lint"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-3"
    ]
  },
  "eslintConfig": {
    "extends": "google",
    "installedESLint": true,
    "rules": {
      "max-len": [
        2,
        {
          "code": 100
        }
      ]
    },
    "env": {
      "browser": true,
      "node": true,
      "mocha": true
    },
    "parser": "babel-eslint"
  },
  "keywords": [],
  "author": "Gabriel <ggodoyoliveira@gmail.com> (http://www.gabrielgodoy.com/)",
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "^6.6.0",
    "axios": "^0.15.3",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-3": "^6.17.0",
    "chai": "^3.5.0",
    "css-loader": "^0.26.1",
    "d3": "^4.4.0",
    "eslint": "^3.12.2",
    "eslint-loader": "^1.6.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.25.0",
    "husky": "^0.12.0",
    "jsdom": "^9.9.1",
    "json-loader": "^0.5.4",
    "mocha": "^3.2.0",
    "node-emoji": "^1.5.1",
    "npm-run-all": "^3.1.2",
    "postcss": "^5.2.8",
    "postcss-loader": "^1.2.1",
    "pug": "^2.0.0-beta6",
    "pug-loader": "^2.3.0",
    "rimraf": "^2.5.4",
    "sinon": "^1.17.7",
    "style-loader": "^0.13.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^2.4.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.2"
  },
  "devDependencies": {
    "eslint": "3.12.2",
    "eslint-config-google": "^0.7.1"
  }
}
